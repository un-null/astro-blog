---
import { cva } from "../../styled-system/css"

const header = cva({
    base: {
        h: "14",
    },
    variants: {
        main: {
            container: {
                maxW: "4xl",
                display: "flex",
                justifyContent: "space-between",
                alignItems: "center",
                margin: "0 auto",

            },
            logo: {
                display: "flex",
                alignItems: "center",
                fontSize: "lg",
                gap: "1",
                fontWeight: "bold",
            }
        },
        nav: {
            list: {
                display: "flex",
                alignItems: "center",
                gap: "4",
                listStyle: "none",

            },
            link: {
                fontSize: "sm",
                fontWeight: "semibold",
                color: "neutral.300",
                _hover: {
                    color: "neutral.50",
                }

            }
        }
    },
})
---

<header class={header()}>
    <div class={header({ main: "container"})}>
        <div>
            <a href="/" class={header({ main: "logo" })}>
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 20 20">
                    <path 
                        fill="currentColor" 
                        d="M8 7h7.5A1.5 1.5 0 0 0 17 5.5v-1A1.5 1.5 0 0 0 15.5 3H8v4ZM7 3H4.5A1.5 1.5 0 0 0 3 4.5v1A1.5 1.5 0 0 0 4.5 7H7V3Zm3 9h5.5a1.5 1.5 0 0 0 1.5-1.5v-1A1.5 1.5 0 0 0 15.5 8H10v4ZM9 8H6.5A1.5 1.5 0 0 0 5 9.5v1A1.5 1.5 0 0 0 6.5 12H9V8Zm6.5 9H12v-4h3.5a1.5 1.5 0 0 1 1.5 1.5v1a1.5 1.5 0 0 1-1.5 1.5Zm-7-4H11v4H8.5A1.5 1.5 0 0 1 7 15.5v-1A1.5 1.5 0 0 1 8.5 13Z"/>
                 </svg>
                 ZenTrim
            </a>
        </div>
        <nav>
            <ul class={header({ nav :"list" })}>
                <li>
                    <a href="https://new-portfolio-oujxlrf4r-un-null.vercel.app/" target="_blank" rel="noopener noreferrer" class={header({ nav: "link"})}>
                        Portfolio
                    </a>
                </li>
                <li>
                    <a href="https://github.com/un-null/astro-blog" target="_blank" rel="noopener noreferrer" class={header({ nav: "link"})}>
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path 
                                fill="currentColor" 
                                d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"/>
                        </svg>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>